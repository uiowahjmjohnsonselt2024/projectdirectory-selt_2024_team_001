%html{ lang: "en" }
  %head
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %meta{ name: "csrf-token", content: form_authenticity_token }
    %title OpenAI API Tester
    %style
      :plain
        body {
          font-family: Arial, sans-serif;
          text-align: center;
          margin: 50px;
        }
        input[type="text"] {
          width: 300px;
          padding: 10px;
        }
        select {
          padding: 10px;
          margin-top: 10px;
        }
        button {
          padding: 10px 20px;
          margin-top: 10px;
        }
        img {
          display: block;
          margin: 20px auto;
          max-width: 500px;
          border: 1px solid #ccc;
        }
        .response {
          margin-top: 20px;
          white-space: pre-wrap;
        }
        .error {
          color: red;
        }
  %body
    %h1 Generate an Image or Text with OpenAI
    %form{ id: "apiForm" }
      %input{ type: "text", id: "promptInput", placeholder: "Enter your prompt", required: true }
      %br/
      %select{ id: "responseType" }
        %option{ value: "image" } Image
        %option{ value: "text" } Text
      %br/
      %button{ type: "submit" } Generate

    %p.error{ id: "error" }
    #responseContainer

    %script
      :plain
        document.getElementById('apiForm').addEventListener('submit', async function(e) {
          e.preventDefault();
          const prompt = document.getElementById('promptInput').value;
          const responseType = document.getElementById('responseType').value;
          const responseContainer = document.getElementById('responseContainer');
          const errorElement = document.getElementById('error');

          // Clear previous response and error
          responseContainer.innerHTML = '';
          errorElement.textContent = '';

          try {
            const response = await fetch('https://intense-anchorage-45022-5f6ff5346b58.herokuapp.com/chat', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ prompt: prompt, type: responseType })
            });

            if (!response.ok) {
              throw new Error('Failed to generate response. Please try again.');
            }

            const data = await response.json();

            if (responseType === 'image' && data.image_url) {
              const img = document.createElement('img');
              img.src = data.image_url;
              img.alt = 'Generated Image';
              responseContainer.appendChild(img);
            } else if (responseType === 'text' && data.reply) {
              const textResponse = document.createElement('div');
              textResponse.className = 'response';
              textResponse.textContent = data.reply;
              responseContainer.appendChild(textResponse);
            } else {
              throw new Error('No valid response received.');
            }
          } catch (error) {
            errorElement.textContent = error.message;
          }
        });
