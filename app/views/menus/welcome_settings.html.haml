%html{ lang: "en", "data-theme": session[:theme] || "dark" }
  %head
    %title Shards of the Grid
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    = csrf_meta_tags
    :css
      /* Ensure the entire page covers the full viewport */
      html,
      body {
        background-color: rgb(13, 14, 33); /* Default background (dark mode) */
        height: 100%;
        color: white;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      [data-theme="light"] body {
        background-color: white; /* Light mode background */
        color: black;
      }


      title {
        padding-bottom: 30px;
        color: white;
        text-align: center;
        margin-top: 1rem;
      }

      [data-theme="light"] title {
        padding-bottom: 30px;
        color: black;
        text-align: center;
        margin-top: 1rem;
      }

      h1, p {
        color: inherit; /* Adapt to the current theme */
      }

      /* Parent container */
      .parent-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        box-sizing: border-box;
        max-height: 90vh;
        gap: 1rem;
      }

      .settings-container {
        background: black;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        text-align: center;
      }

      [data-theme="light"] .settings-container {
        background: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        text-align: center;
      }

      .setting-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        padding: 0.5rem 0;
        color: inherit;
      }

      .switch {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 20px;
      }

      .switch input {
        opacity: 0;
        width: 0;
        height: 0;
      }

      .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
      }

      .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 2px;
        bottom: 2px;
        background-color: white;
        transition: .4s;
        border-radius: 50%;
      }

      input:checked + .slider {
        background-color: rgba(255, 0, 0, 0.5);
      }

      [data-theme="light"] input:checked + .slider {
        background-color: #4caf50;
      }

      input:checked + .slider:before {
        transform: translateX(20px);
      }

      .space-btn {
        color: #fff;
        background-image: linear-gradient(135deg, #191919, #000000);
        border: 1px solid #633535;
        text-shadow: 0 0 5px rgba(255, 0, 0, 0.8);
        transition: box-shadow 0.3s, transform 0.3s;
        border-radius: 8px;
        padding: 10px 20px;
      }

      [data-theme="light"] .space-btn {
        color: #fff;
        background-image: linear-gradient(135deg, #2b3e50, #1b263b);
        border: 1px solid #3b4b67;
        text-shadow: 0 0 5px #00ffff;
        transition: box-shadow 0.3s, transform 0.3s;
        border-radius: 8px;
        padding: 10px 20px;
      }

      .space-btn:hover {
        box-shadow: 0 0 20px rgba(255, 0, 0, 0.5);
        transform: translateY(-3px);
      }

      [data-theme="light"] .space-btn:hover {
        box-shadow: 0 0 20px rgba(0, 153, 255, 0.8);
        transform: translateY(-3px);
      }

  %body{ class: session[:theme] || 'dark' }
    #container.parent-container
      = form_with url: toggle_theme_path, method: :patch, local: true do
        .settings-container
          %h1 Settings
          %div.setting-item
            %label{ for: "theme_toggle" } Light / Dark Mode
            %div.switch
              = check_box_tag :theme_toggle, 'light', (session[:theme] == 'light'), id: 'theme_toggle'
              %span.slider

        %div.actions
          = submit_tag "Save Changes", class: "btn btn-primary space-btn"
          = link_to main_game_screen_path, class: 'btn btn-secondary btn-sm space-btn' do
            %i.mdi.mdi-arrow-left
              = " Back"
          = link_to 'Main Menu', welcome_screen_path, class: "btn btn-secondary space-btn"
