%html{ lang: "en" }
  %head
    %title Shards of the Grid
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    = csrf_meta_tags
    :css
      /* Ensure the entire page covers the full viewport */
      html,
      body {
        background-color: rgb(13, 14, 33); /* Default background (dark mode) */
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      body.light {
        background-color: white; /* Light mode background */
        color: black;
      }

      body.dark {
        background-color: rgb(13, 14, 33); /* Dark mode background */
        color: white;
      }

      title.dark {
        padding-bottom: 30px;
        color: white;
        text-align: center;
        margin-top: 1rem;
      }

      title.light {
        padding-bottom: 30px;
        color: black;
        text-align: center;
        margin-top: 1rem;
      }

      h1, p {
        color: inherit; /* Adapt to the current theme */
      }

      /* Parent container */
      .parent-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        box-sizing: border-box;
        max-height: 90vh;
        gap: 1rem;
      }

      .settings-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        text-align: center;
      }

      .setting-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        padding: 0.5rem 0;
        color: inherit;
      }

      .switch {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 20px;
      }

      .switch input {
        opacity: 0;
        width: 0;
        height: 0;
      }

      .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
      }

      .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 2px;
        bottom: 2px;
        background-color: white;
        transition: .4s;
        border-radius: 50%;
      }

      input:checked + .slider {
        background-color: #4caf50;
      }

      input:checked + .slider:before {
        transform: translateX(20px);
      }

  %body{ class: session[:theme] || 'dark' }
    #container.parent-container
      = form_with url: toggle_theme_path, method: :patch, local: true do
        .settings-container
          %h1 Settings
          %div.setting-item
            %label{ for: "theme_toggle" } Light / Dark Mode
            %div.switch
              = check_box_tag :theme_toggle, 'light', (session[:theme] == 'light'), id: 'theme_toggle'
              %span.slider

        %div.actions
          = submit_tag "Save Changes", class: "btn btn-primary space-btn"
          = link_to 'Back', welcome_screen_path, class: "btn btn-secondary space-btn"
