!!! 5
%html{ lang: "en" }
  %head
    %title Shards of the Grid
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    :css
      /* General page styling */
      html,
      body {
        background-color: rgb(13, 14, 33); /* Background for the entire page */
        height: 100%; /* Full viewport height */
        margin: 0; /* Removes default margin */
        font-family: Arial, sans-serif; /* General font style */
        overflow: hidden; /* Prevent overflow */
      }

      .title {
        padding-bottom: 30px;
        color: white;
        text-align: center;
        margin-top: 1rem; /* Create some space below the title */
      }

      #game-container {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        justify-content: space-between;
        padding: 20px 2rem 2rem 2rem; /* Reduce padding to 20px from top */
        width: 100%;
        height: calc(100vh - 40px); /* Adjust height to accommodate the top padding (20px x 2) */
        box-sizing: border-box;
      }

      /* Game logo positioning */
      #game-logo {
        position: absolute;
        top: 10px;
        left: 20px;
      }

      #game-logo img {
        height: 50px; /* Ensure the logo size is larger as needed */
        width: 50px;  /* Ensure the logo size is larger as needed */
      }

      /* Character icon positioning */
      #character-icon {
        position: absolute;
        top: 10px;
        right: 20px;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        cursor: pointer;
        border: 2px solid white;
        transition: box-shadow 0.3s ease;
      }

      #character-icon:hover {
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.6);
      }

      /* Dropdown menu for character icon */
      .dropdown-menu {
        display: none;
        position: absolute;
        top: 80px;
        right: 20px;
        background-color: rgba(13, 14, 33, 0.9);
        border-radius: 8px;
        border: 1px solid #666;
        padding: 1rem;
        color: white;
        z-index: 10;
        text-align: center;
      }

      #character-icon:focus + .dropdown-menu,
      #character-icon:active + .dropdown-menu {
        display: block;
      }

      /* Button styling for dropdown */
      .dropdown-btn {
        color: white;
        background-color: transparent;
        border: 2px solid #666;
        border-radius: 10px;
        padding: 10px 15px;
        margin-top: 5px;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s;
        width: 100%;
      }

      .dropdown-btn:hover {
        background-color: #4caf50;
        box-shadow: 0 0 10px rgba(1, 110, 218, 0.7);
      }

      /* Grid container styling */
      .game-grid {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        grid-auto-rows: 67px; /* Explicitly define height for rows */
        gap: 10px; /* Increase gap to add more space between rows and columns */
        width: 55%;
        height: auto; /* Set height to auto to adapt based on content */
        background-color: rgb(23, 24, 43);
        padding: 1rem;
        border-radius: 10px;
        overflow: auto; /* Allow scrolling if needed */
      }

      /* Grid cell styling */
      .grid-cell {
        background-color: rgb(31, 32, 52);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        width: 100%; /* Ensure cells take full width within the column */
        height: 67px; /* Match height to ensure consistency */
      }

      .grid-cell:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 20px 10px rgba(1, 110, 218, 0.7);
      }


      /* Chat container styling */
      .chat-container {
        width: 40%;
        background-color: rgb(23, 24, 43);
        padding: 1rem;
        border-radius: 10px;
        color: white;
        height: 90%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        box-sizing: border-box;
      }

      .chat-messages {
        flex-grow: 1;
        overflow-y: auto;
        border: 1px solid #666;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 8px;
      }

      .chat-input {
        display: flex;
        gap: 0.5rem;
      }

      .chat-input input {
        flex-grow: 1;
        padding: 0.5rem;
        border-radius: 8px;
        border: none;
        box-sizing: border-box;
      }

      .chat-input button {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background-color: #4caf50;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      .chat-input button:hover {
        background-color: #45a049;
      }

  %body
    %header.title
    #game-container
      #game-logo
        = image_tag "GameLogo.png", alt: "The game logo", height: "50", width: "50"
      #character-icon{ tabindex: "0" }
        = image_tag "baseAvatar.png", alt: "Character Icon", height: "50", width: "50"
      .dropdown-menu
        %button.dropdown-btn View Profile
        %button.dropdown-btn Settings
        %button.dropdown-btn Log Out
      .game-grid
        - (0..63).each do |i|
          %div.grid-cell
            %p= "Cell #{i + 1}"
      .chat-container
        %h1 Chat
        .chat-messages
          %p Welcome to the chat!
        .chat-input
          %input{ type: "text", placeholder: "Type your message..." }
          %button Send
