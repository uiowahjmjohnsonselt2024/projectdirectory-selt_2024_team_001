%html{ lang: "en" }
  %head
    %title Shards of the Grid
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = csrf_meta_tags
    :css
      /* General page styling */
      html,
      body {
        background-color: rgb(13, 14, 33);
        height: 100%;
        margin: 0;
        font-family: Arial, sans-serif;
        overflow: hidden;
      }

      .title {
        padding-bottom: 30px;
        color: white;
        text-align: center;
        margin-top: 1rem;
      }

      #game-container {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        justify-content: space-between;
        padding: 20px 2rem 2rem 2rem;
        width: 100%;
        height: calc(100vh - 40px);
        box-sizing: border-box;
      }

      /* Game logo positioning */
      #game-logo {
        position: absolute;
        top: 10px;
        left: 20px;
      }

      #game-logo img {
        height: 50px;
        width: 50px;
      }

      /* Character icon container */
      #character-icon-container {
        position: absolute;
        top: 10px;
        right: 20px;
        width: 50px;
        cursor: pointer;
      }

      /* Character icon positioning */
      #character-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 2px solid white;
        transition: box-shadow 0.3s ease;
      }

      #character-icon:hover {
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.6);
      }

      /* Dropdown menu for character icon */
      .dropdown-menu {
        display: none; /* Hidden by default */
        position: absolute;
        top: 60px;
        right: 0;
        background-color: rgba(13, 14, 33, 0.9);
        border-radius: 8px;
        border: 1px solid #666;
        padding: 1rem;
        color: white;
        z-index: 10;
        text-align: center;
        display: flex; /* Flex container for buttons */
        flex-direction: column; /* Arrange buttons in a vertical column */
        gap: 0.5rem; /* Add spacing between items */
      }

      /* Button styling for dropdown */
      .dropdown-btn {
        color: white;
        background-color: transparent;
        border: 2px solid #666;
        border-radius: 10px;
        padding: 10px 15px;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s;
        width: 100%;
        text-decoration: none;
      }

      .dropdown-btn:hover {
        background-color: #4caf50;
        box-shadow: 0 0 10px rgba(1, 110, 218, 0.7);
        text-decoration: none;
      }

      /* Grid container styling */
      .game-grid {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        grid-auto-rows: 67px;
        gap: 10px;
        width: 55%;
        height: auto;
        background-color: rgb(23, 24, 43);
        padding: 1rem;
        border-radius: 10px;
        overflow: auto;
      }

      /* Grid cell styling */
      .grid-cell {
        background-color: rgb(31, 32, 52);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        width: 100%;
        height: 67px;
      }

      .grid-cell:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 20px 10px rgba(1, 110, 218, 0.7);
      }

      /* Chat container styling */
      .chat-container {
        width: 40%;
        background-color: rgb(23, 24, 43);
        padding: 1rem;
        border-radius: 10px;
        color: white;
        height: 90%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        box-sizing: border-box;
      }

      .chat-messages {
        flex-grow: 1;
        overflow-y: auto;
        border: 1px solid #666;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 8px;
      }

      .chat-input {
        display: flex;
        gap: 0.5rem;
      }

      .chat-input input {
        flex-grow: 1;
        padding: 0.5rem;
        border-radius: 8px;
        border: none;
        box-sizing: border-box;
      }

      .chat-input button {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background-color: #4caf50;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
      }

