%html{ lang: "en" }
  %head
    %title Shards of the Grid - Sponsor Intro
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    = csrf_meta_tags
    :css
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        display: flex;
        flex-direction: column;
      }

      .video-container {
        width: 100%;
        height: 90%;
        position: relative;
      }

      .control-bar {
        width: 100%;
        height: 10%;
        background-color: #1a1a1a;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 20px;
        box-sizing: border-box;
      }

      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .skip-btn {
        padding: 10px 20px;
        background-color: #ff5050;
        border-radius: 5px;
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        font-size: 16px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .skip-btn:hover {
        background-color: #ff3030;
      }

  %body
    .video-container
      %video{ id: "sponsorVideo", autoplay: true, muted: true, controls: false }
        %source{ src: "/videos/sponsor_intro.mp4", type: "video/mp4" }
        Your browser does not support the video tag.

    .control-bar
      %button.skip-btn{ id: "skipButton" } Skip

    :javascript
      document.addEventListener('DOMContentLoaded', function() {
        var sponsorVideo = document.getElementById('sponsorVideo');
        var skipButton = document.getElementById('skipButton');

        // Ensure video plays automatically
        sponsorVideo.play();

        // Add an event listener to the skip button to pause the video and redirect to the login page
        skipButton.addEventListener('click', function() {
          sponsorVideo.pause(); // Pause the video
          window.location.href = "#{start_screen_path}"; // Redirect to the login page
        });

        // Add an event listener for the 'ended' event to redirect automatically after the video ends
        sponsorVideo.addEventListener('ended', function() {
          window.location.href = "#{game_intro_path}";
        }, { once: true }); // Ensures the listener runs only once
      });
