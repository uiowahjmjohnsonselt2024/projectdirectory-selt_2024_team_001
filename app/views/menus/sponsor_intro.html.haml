%html{ lang: "en" }
  %head
    %title Sponsor Introductory Video - Shards of the Grid
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    :css
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        overflow: hidden;
      }
      #video-container {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
      }
      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
  %body
    #video-container
      %video#sponsor-video{ autoplay: true, muted: false, controls: false }
        %source{ src: asset_path('intro1.mp4'), type: "video/mp4" }
        Your browser does not support the video tag.

    :javascript
      document.addEventListener('DOMContentLoaded', function() {
        const sponsorVideo = document.getElementById('sponsor-video');
        if (sponsorVideo) {
          sponsorVideo.addEventListener('ended', function() {
            window.location.href = "#{game_intro_path}";
          });
        }
      });
