!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %title Shards of the Grid
    :css
      /* Container to center content */
      html, body {
        height: 100%;
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      /* Main flex container */
      #container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        max-width: 400px;
        padding: 2rem;
      }

      .header {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 2rem;
      }

      .login-container {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 100%;
        text-align: center;
      }

      h2 {
        margin-bottom: 1rem;
      }

      input[type="email"],
      input[type="password"] {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }

      .btn {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 0.5rem;
        border: none;
        border-radius: 4px;
        color: white;
        cursor: pointer;
      }

      .btn-login {
        background-color: #007bff;
      }

      .btn-signup {
        background-color: #28a745;
      }

%body
  #container
    .login-container
      %h2 Login
      - if flash[:alert]
        %div.alert.alert-danger= flash[:alert]

      = form_tag login_path, method: :post do
        .form-group
          %label{ for: "email" } Email
          %input#email.form-control{ type: "email", name: "email", required: true }

        .form-group
          %label{ for: "password" } Password
          %input#password.form-control{ type: "password", name: "password", required: true }

        %button.btn.btn-primary.btn-login{ type: "submit" } Login

      %button.btn.btn-signup{ type: "button", onclick: "window.location.href='#{signup_path}'" } Sign Up
